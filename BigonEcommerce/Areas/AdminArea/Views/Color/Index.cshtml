@model IEnumerable<Color>


<div class="card">
    <div class="card-header">

        <h5>Colors</h5>
        <a asp-controller="color" asp-action="create" class="btn btn-success">
            Add +
        </a>

    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Color</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="tableId">
                    <partial name="_Body" model="@Model" />
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .my-color {
        display: inline-block;
        width: 30px;
        height: 30px;
        border-radius: 100px;
        border: 1px solid #cdcdcd;
    }
</style>

@section custom_js {
    <script>
        function removeColor(id, name) {

            const tableId = $("#tableId");
          Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!",
            cancelButtonText: "No, don't delete!"
          }).then((result) => {
            if (result.isConfirmed) {
              $.ajax({
                method: "POST",
                url: '@Url.Action("remove","color")', 
                data: { id }, 
                success: (result) => {
                  if (!result.error) {
                    Swal.fire({
                      title: "Deleted!",
                      text: result.message,
                      icon: "success"
                    });
                 
                      tableId.html(result);
                    return;
                  } else {
                    Swal.fire({
                      title: "Something went wrong!",
                      text: result.message,
                      icon: "error"
                    });
                  }
                },
                error: (error) => {
                  console.log(error);
                }
              });
            }
          });
        }

    </script>

}