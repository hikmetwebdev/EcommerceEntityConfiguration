@model Color;

<form method="post" asp-action="edit"  asp-controller="Color">
    <div class="card-header mb-4">
        <h5>Edit color</h5>

        <div class="card-header-right">
            <i class="icofont icofont-spinner-alt-5"></i>
        </div>

    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for=Name>Color name</label>
        <div class="col-sm-10">
            <input asp-for=Name type="text" class="form-control" placeholder="color name">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="HexCode" class="col-sm-2 col-form-label">Color</label>
        <div class="col-sm-10">
            <input asp-for=HexCode type="color" class="form-control">
        </div>
    </div>

    <a asp-action="index" asp-controller="color" class="btn btn-light">Go back</a>
    <button type="submit" class="btn btn-success">Submit</button>

</form>