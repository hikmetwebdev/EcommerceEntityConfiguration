@model Color

<div class="card">
    <div class="card-header">
        <h5>Color's detail</h5>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Color's hexcode</th>
                        <th>Created by</th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <td>@Model.Id</td>
                        <td>@Model.Name</td>
                        <td>@Model.HexCode</td>
                        <td>
                            @Model.CreatedBy
                        </td>
                        <td>
                            @Model.CreatedAt
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</div>
