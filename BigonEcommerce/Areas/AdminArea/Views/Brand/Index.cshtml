@model List<Brand>
@{
    var count = 1;
}
<div class="card">
    <div class="card-header">

        <h5>Colors</h5>
        <a asp-controller="Brand" asp-action="Create" class="btn btn-success">
            Add +
        </a>

    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@item.Name</td>
                                <td>
                                    <a class="btn btn-primary" asp-controller="Brand" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    <a class="btn btn-warning" asp-controller="Brand" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a onclick="removeBrand(@item.Id, '@item.Name')" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                            count++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-warning">No Brands available!</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section custom_js {
    <script>
        function removeBrand(id, name) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!",
                cancelButtonText: "No, don't delete!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        method: "POST",
                        url: '@Url.Action("remove", "Brand")',
                        data: { id },
                        success: (result) => {
                            if (!result.error) {
                                Swal.fire({
                                    title: "Deleted!",
                                    text: result.message,
                                    icon: "success"
                                });
                                setTimeout(() => {
                                    location.reload();
                                }, 1500);
                                return;
                            } else {
                                Swal.fire({
                                    title: "Something went wrong!",
                                    text: result.message,
                                    icon: "error"
                                });
                            }
                        },
                        error: (error) => {
                            console.log(error);
                        }
                    });
                }
            });
        }

    </script>

}